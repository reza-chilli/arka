<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arka CRM</title>
</head>
<body>
    <%- include('../partitions/navbar') %>
    <nav class="navbar sticky-top navbar-expand-lg" style="z-index: 1;">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/project/add-project">New</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="#">Delete</a>
                </li>
            </ul>
          </div>
        </div>
    </nav>
    <hr class="mt-0">
    <div class="container">
        <table id="myTable" class="table table-bordered table-striped col-4">
            <thead>
            <tr>
                <th>Project Code</th>
                <th>Project Title</th>
                <th>Product</th>
                <th>Product Count</th>
                <th>Created On</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <script src="/main.js"></script>
    <script>
        $(document).ready(function() {
            const host = window.location.origin;

            const dataTable = $('#myTable').DataTable({
                "oLanguage": {
                    "sSearch": "Search Project",
                },
                "processing": true,
                "serverSide": true,
                "ordering": false,
                "autoWidth": false,
                "pageLength": 10,
                "select": {
                    "style": 'multi'
                },
                "ajax": {
                    url: host + '/project/datatable',
                    type: 'GET'
                },
                "columns": [
                    { "data": "code" },
                    { "data": "title" },
                    { "data": "product.title" },
                    { "data": "productCount" },
                    { "data": "createdAt" }
                ],
            });
            });
    </script>
</body>
</html>